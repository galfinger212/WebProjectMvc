@model ProductModel
<li class="cart_item clearfix">
    <div class="cart_item_image">
        @{
            if (Model.Image1 != null)
            {
                <img class="imageAuto" src="@Model.Image1" alt="">
            }
            else
            {
                <img class="imageAuto" src="~/images/noImage.png" alt="" />
            }
        }
    </div>
    <form class="cart_item_info d-flex flex-md-row flex-column justify-content-between" asp-controller="Home" asp-action="ShoppingCartSubmit" asp-route-id="@Model.Id">
        <div class="cart_item_name cart_info_col">
            <div class="cart_item_title">Title</div>
            <div  class="cart_item_text">
                <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">
                    @Model.Title
                </a>
            </div>
        </div>
        <div class="cart_item_color cart_info_col">
            <div class="cart_item_title">Publisher Name</div>
            <div class="cart_item_text">
                @Model.OwnerId.FirstName @Model.OwnerId.LastName
            </div>
        </div>
        <div class="cart_item_quantity cart_info_col">
            <div class="cart_item_title">Quantity</div>
            <div class="cart_item_text">1</div>
        </div>
        <div class="cart_item_price cart_info_col">
            <div class="cart_item_title">
                Price
            </div>
            <div class="cart_item_text">
                @{
                    if (Context.Request.Cookies["UserName"] != null)
                    {
                        <span>$@(Math.Round((decimal.ToDouble(Model.Price) * 0.9), 2))</span>
                    }
                    else
                    {
                        <span>$@Model.Price</span>
                    }
                }
            </div>
        </div>
        <div class="cart_item_total cart_info_col">
            <div class="cart_item_title">Buy</div>
            <div class="cart_item_text">
                @{
                    if (Context.Request.Cookies["UserName"] != null)
                    {
                        <input type="checkbox" checked onchange="this.form.submit()" />
                    }
                    else
                    {
                        <input type="checkbox" checked onchange="this.form.submit()" />
                    }
                }
            </div>
        </div>
    </form>
</li>
<hr />