@using System.Globalization
@model string
@{
    string welcomeString = "";
    int timeOfDay = CultureInfo.InvariantCulture.Calendar.GetHour(DateTime.Now);
    if (timeOfDay >= 7 && timeOfDay < 12) welcomeString += "Good Morning";
    else if (timeOfDay >= 12 && timeOfDay < 16) welcomeString += "Good Afternoon";
    else if (timeOfDay >= 16 && timeOfDay < 21) welcomeString += "Good Evening";
    else if (timeOfDay >= 21 && timeOfDay < 24 || timeOfDay >= 0 && timeOfDay < 7) welcomeString += "Good Night";
}
<div>
    <input id="Name" value="@Model" type="hidden"/>
    <input id="Id" type="hidden" />
    <div>
        @{
            @welcomeString
        }
    </div>
    <div id="divModel">
        @Model!
    </div>
    <div>
        <button class="btn btn-primary" id="LogOut_button" type="button">Log Out</button>
    </div>
</div>
@section Scripts{
    <script src="~/js/userId.js"></script>
}